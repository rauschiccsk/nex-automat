# ICC - Supplier Invoice Worker Environment
# Copy to: C:\ICC\nex-automat\apps\supplier-invoice-worker\.env

# Temporal Server (Docker on Ubuntu host)
TEMPORAL_HOST=192.168.122.1
TEMPORAL_PORT=7234
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=icc-invoice-queue

# IMAP (Webglobe - standard IMAP, no OAuth2)
IMAP_HOST=mail.webglobe.sk
IMAP_PORT=993
IMAP_USER=icc.invoices@icc.sk
IMAP_PASSWORD=<from-credentials>
IMAP_FOLDER=INBOX
IMAP_USE_SSL=true

# FastAPI Invoice Loader (local on Windows VM)
FASTAPI_URL=http://localhost:8001
LS_API_KEY=<your-api-key>

# SMTP Notifications (Webglobe)
SMTP_HOST=mail.webglobe.sk
SMTP_PORT=465
SMTP_USER=icc.invoices@icc.sk
SMTP_PASSWORD=<from-credentials>
NOTIFY_EMAIL=rausch@icc.sk

# Logging
LOG_LEVEL=INFO
